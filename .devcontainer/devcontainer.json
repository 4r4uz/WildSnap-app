{
    "name": "Flutter Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true
    },
    "extensions": [
        "dart-code.dart-code",
        "dart-code.flutter",
        "ms-azuretools.vscode-docker"
    ],
    "forwardPorts": [
        8080,
        3000
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "flutter pub get && flutter doctor"
}